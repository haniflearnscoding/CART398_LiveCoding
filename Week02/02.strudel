// Exploring generative randomness

// Set a collaborative tempo
setcps(130/60/4)

stack(
  // 1. Probabilistic Triggering: 80% chance each kick plays
  s("bd(3,8)?0.2"),

  // 2. Alternation: Randomly picks between three different hat sounds
  s("[hh|hh:2|hc]*8"),

  // 3. Transformation: Occasionally adds a "ply" (repeat) to the rimshot
  s("rim:1(3,8,<0 0 0 1>)").sometimes(x => x.ply(2)),

  // 4. Random Removal: 50% chance for the percussion layer to trigger
  s("perc*4?")
)
